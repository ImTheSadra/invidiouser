{
  "manifest_version": 3,
  "name": "Invidious",
  "description": "Replace YouTube With Invidious",
  "author": "Hamidreza Ahmadi",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "version": "0.5",
  "content_scripts": [{
    "js": ["background.js"],
    "matches": ["<all_urls>"],
    "run_at":    "document_start",
    "exclude_matches": [
      "https://*.youtube.com/*","https://*.github.com/*","https://*.githubusercontent.com/*"
    ]
  }]
}
